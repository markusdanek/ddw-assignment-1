	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">
			<h2>List all Jobs</h2>
			<table class="table">
				<thead>
					<tr>
						<th>Name:</th>
						<th>E-Mail:</th>
						<th>Salary:</th>
						<th>Place:</th>
						<th></th>
					</tr>
				</thead>
